<%= form_for @message, url: {action: 'create'}, html: {class: 'form-main'} do |e| %>

    <%= render 'partials/error_message' %>

    <div class="form-group">
      <label class="label-title" for="email">To:</label>
      <%= e.text_field :email, type: 'email', placeholder: 'Email', class: 'form-control user-input' %>
    </div>
    <div class="form-group">
      <label class="label-title" for="subject">Subject:</label>
      <%= e.text_field :subject, placeholder: 'Subject', class: 'form-control user-input'  %>
    </div>
    <div class="form-group">
      <label class="label-title" for="message">Message:</label>
      <%= e.text_area :message, placeholder: 'Message', class: 'form-control'  %>
    </div>
    <div class="submit">
      <%= e.submit "Send", class: 'btn btn-primary', id: 'button'%>
      <div class="ease"></div>
    </div>

<% end %>